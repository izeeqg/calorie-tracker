server:
  port: 8080

spring:
  datasource:
    url: ${SPRING_DATASOURCE_URL:jdbc:mysql://mysql:3306/calorie_tracker?useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Shanghai}
    username: ${SPRING_DATASOURCE_USERNAME:calorie_user}
    password: ${SPRING_DATASOURCE_PASSWORD:CalorieUser554297!}
    hikari:
      minimum-idle: 5
      maximum-pool-size: 20
      idle-timeout: 30000
      connection-timeout: 30000
  redis:
    host: ${SPRING_REDIS_HOST:redis}
    port: ${SPRING_REDIS_PORT:6379}
    password: ${SPRING_REDIS_PASSWORD:CalorieRedis554297!}
    timeout: 10000
    lettuce:
      pool:
        max-active: 8
        max-wait: -1
        max-idle: 8
        min-idle: 0

# MinIO对象存储配置
minio:
  endpoint: ${MINIO_ENDPOINT:http://minio:9000}
  access-key: ${MINIO_ACCESS_KEY:minioadmin}
  secret-key: ${MINIO_SECRET_KEY:CalorieMinio554297!}
  bucket-name: ${MINIO_BUCKET_NAME:calorie-images}
  domain: ${MINIO_DOMAIN:https://554297.xyz/files}

# 文件上传配置
file:
  upload:
    path: ${FILE_UPLOAD_PATH:/app/uploads}
  access:
    path: /files

# 日志配置
logging:
  level:
    com.calorie: info
    org.springframework: warn
    org.apache.ibatis: warn
  file:
    path: /var/log/calorie-tracker
  pattern:
    file: "%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"
    console: "%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"

# 管理端点配置
management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics
  endpoint:
    health:
      show-details: when-authorized 