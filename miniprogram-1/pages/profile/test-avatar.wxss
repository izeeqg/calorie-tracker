/* pages/profile/test-avatar.wxss */
.test-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.test-header {
  text-align: center;
  padding: 40rpx 0;
  background-color: #FF5A5F;
  color: white;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.test-title {
  font-size: 36rpx;
  font-weight: bold;
}

.test-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.test-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #FF5A5F;
  padding-left: 16rpx;
}

.avatar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  background-color: #f8f8f8;
  border: 2rpx dashed #ccc;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.avatar-btn::after {
  border: none;
}

.test-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #FF5A5F;
}

.btn-text {
  font-size: 28rpx;
  color: #666;
}

.test-btn {
  background-color: #FF5A5F;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.test-btn::after {
  border: none;
}

.result-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.url-text {
  word-break: break-all;
  font-family: monospace;
  background-color: #eee;
  padding: 10rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
}

.log-container {
  max-height: 400rpx;
  overflow-y: auto;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.log-item {
  display: block;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-family: monospace;
  word-break: break-all;
} 