/* pages/login/index.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  min-height: 100vh;
  background-image: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
  background-size: 400% 400%;
  animation: gradientShift 8s ease infinite;
}

@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 80rpx 0 60rpx 0;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 255, 255, 0.4);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.login-panel {
  width: 100%;
  background-image: linear-gradient(to top, #fad0c4 0%, #fad0c4 1%, #ffd1ff 100%);
  background-size: 200% 200%;
  animation: panelGradientShift 6s ease infinite;
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(250, 208, 196, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

@keyframes panelGradientShift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-shadow: 0 1rpx 4rpx rgba(255, 255, 255, 0.5);
}

.login-tip {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.3);
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background-image: linear-gradient(to top, #fad0c4 0%, #fad0c4 1%, #ffd1ff 100%);
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(250, 208, 196, 0.4);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(250, 208, 196, 0.3);
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.agreement-section {
  margin: 40rpx 0;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.agreement-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 8rpx;
}

.agreement-item:last-child {
  margin-bottom: 0;
}

.agreement-text {
  font-size: 26rpx;
  color: #333;
}

.agreement-link {
  font-size: 26rpx;
  color: #ff6b8a;
  text-decoration: underline;
}

/* 游客模式区域 */
.guest-section {
  margin-top: 40rpx;
  width: 100%;
}

.divider-line {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.divider-line::before,
.divider-line::after {
  content: '';
  flex: 1;
  height: 1rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.divider-text {
  margin: 0 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.guest-btn {
  width: 100%;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 0.15);
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.guest-btn:active {
  transform: translateY(2rpx);
  background-color: rgba(255, 255, 255, 0.2);
}

.guest-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.guest-desc {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.guest-desc-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.guest-desc-text:last-child {
  margin-bottom: 0;
}

.privacy-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  text-align: center;
  line-height: 1.4;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.2);
} 