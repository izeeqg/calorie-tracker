/* 动画效果 */
@keyframes pixel-pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

.pixel-animate-pulse {
  animation: pixel-pulse 1.5s infinite steps(2);
}

@keyframes pixel-rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.pixel-animate-rotate {
  animation: pixel-rotate 2s infinite steps(8);
}

@keyframes pixel-blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.pixel-animate-blink {
  animation: pixel-blink 1s infinite steps(2);
}

/* 像素动画过渡 */
.pixel-transition {
  transition: all 0.3s steps(3);
}

/* 像素风格Vant图标通用覆盖样式 */
.van-icon {
  position: relative !important;
  image-rendering: pixelated !important;
  font: normal normal normal 14px/1 'PixelFont', sans-serif !important;
  border: 2rpx solid transparent;
}

.van-icon::before {
  opacity: 0.8;
}

.van-icon::after {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border: 2rpx solid currentColor;
  opacity: 0.3;
}

/* 激活状态图标 */
.active .van-icon,
.van-icon--active {
  transform: scale(1.05);
  border: 2rpx solid currentColor;
} 